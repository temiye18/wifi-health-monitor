<Window x:Class="WiFiHealthMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WiFi Health Monitor - Professional Edition" Height="700" Width="1100"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="WiFi Health Monitor" FontSize="26" FontWeight="Bold" Foreground="#333333"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock x:Name="LastUpdateText" Text="Last updated: --" FontSize="11" Foreground="#666666"/>
                    <TextBlock Text=" | " FontSize="11" Foreground="#666666" Margin="5,0"/>
                    <TextBlock x:Name="DeviceCountText" Text="Devices: --" FontSize="11" Foreground="#666666"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="RunSpeedTestButton" Content="⚡ Speed Test"
                        Width="120" Height="32" Margin="0,0,8,0"
                        Click="RunSpeedTestButton_Click"
                        Background="#4CAF50" Foreground="White"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"/>
                <Button x:Name="RefreshButton" Content="🔄 Refresh"
                        Width="100" Height="32"
                        Click="RefreshButton_Click"
                        Background="#2196F3" Foreground="White"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- Main Content - Tabs -->
        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent">

            <!-- Overview Tab -->
            <TabItem Header="📊 Overview" FontSize="13" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Quick Stats -->
                        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Signal -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Signal Strength" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="SignalText" Text="--%" FontSize="28" FontWeight="Bold" Foreground="#333333"/>
                                    <TextBlock x:Name="SignalStatusText" Text="--" FontSize="10" Foreground="#666666" Margin="0,3,0,0"/>
                                </StackPanel>

                                <!-- Speed -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Connection Speed" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="DownloadSpeedText" Text="--" FontSize="20" FontWeight="Bold" Foreground="#333333"/>
                                        <TextBlock Text=" / " FontSize="20" Foreground="#666666" Margin="3,0"/>
                                        <TextBlock x:Name="UploadSpeedText" Text="--" FontSize="20" FontWeight="Bold" Foreground="#333333"/>
                                    </StackPanel>
                                    <TextBlock Text="Download / Upload" FontSize="10" Foreground="#666666" Margin="0,3,0,0"/>
                                </StackPanel>

                                <!-- Health Score -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Health Score" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="HealthScoreText" Text="--/100" FontSize="28" FontWeight="Bold" Foreground="#4CAF50"/>
                                    <TextBlock x:Name="HealthStatusText" Text="--" FontSize="10" Foreground="#666666" Margin="0,3,0,0"/>
                                </StackPanel>

                                <!-- Stability -->
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Stability (24h)" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="StabilityScoreText" Text="--/100" FontSize="28" FontWeight="Bold" Foreground="#2196F3"/>
                                    <TextBlock x:Name="StabilityStatusText" Text="--" FontSize="10" Foreground="#666666" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Details and Alerts -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Network Details -->
                            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15"
                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Network Details" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="SSID:" Foreground="#666666" FontSize="11"/>
                                        <TextBlock Grid.Column="1" x:Name="SsidText" Text="--" FontWeight="SemiBold" FontSize="11"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Band:" Foreground="#666666" FontSize="11"/>
                                        <TextBlock Grid.Column="1" x:Name="BandText" Text="--" FontWeight="SemiBold" FontSize="11"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Channel:" Foreground="#666666" FontSize="11"/>
                                        <TextBlock Grid.Column="1" x:Name="ChannelText" Text="--" FontWeight="SemiBold" FontSize="11"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Radio Type:" Foreground="#666666" FontSize="11"/>
                                        <TextBlock Grid.Column="1" x:Name="RadioTypeText" Text="--" FontWeight="SemiBold" FontSize="11"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Security:" Foreground="#666666" FontSize="11"/>
                                        <TextBlock Grid.Column="1" x:Name="AuthText" Text="--" FontWeight="SemiBold" FontSize="11"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="RSSI:" Foreground="#666666" FontSize="11"/>
                                        <TextBlock Grid.Column="1" x:Name="RssiText" Text="--" FontWeight="SemiBold" FontSize="11"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Alerts & Recommendations -->
                            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15"
                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Alerts &amp; Recommendations" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                        <ItemsControl x:Name="AlertsListBox">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="12" Foreground="#F57C00"/>
                                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="#666666" Margin="0,4,0,0" FontSize="10"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    <TextBlock x:Name="NoAlertsText" Text="✓ No alerts. Network is healthy!"
                                               TextWrapping="Wrap" Foreground="#4CAF50" FontStyle="Italic" Margin="0,10,0,0" FontSize="11"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Analytics Tab -->
            <TabItem Header="📈 Analytics" FontSize="13" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">

                        <!-- ISP Analysis -->
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="ISP Performance Analysis" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <TextBlock x:Name="IspAnalysisText" Text="Analyzing... (need 10+ speed tests)"
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Best Download Times -->
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Best Download Times" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <TextBlock x:Name="BestTimesText" Text="Analyzing... (need 50+ metrics)"
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Network Stability -->
                        <Border Background="White" CornerRadius="8" Padding="20"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Network Stability (Last 24h)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <TextBlock x:Name="StabilityDetailsText" Text="Collecting data..."
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Devices Tab -->
            <TabItem Header="📱 Devices" FontSize="13" FontWeight="SemiBold">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="🔍 Scan Now" Width="120" Height="32"
                                Click="ScanDevices_Click"
                                Background="#2196F3" Foreground="White"
                                BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"/>
                        <TextBlock x:Name="LastScanText" Text="Last scan: --"
                                   VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#666666" FontSize="11"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15"
                            BorderBrush="#E0E0E0" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="DevicesListBox">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F9F9F9" CornerRadius="5" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="13"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="IP: " Foreground="#666666" FontSize="10"/>
                                                        <TextBlock Text="{Binding IpAddress}" FontSize="10"/>
                                                        <TextBlock Text=" | MAC: " Foreground="#666666" FontSize="10" Margin="8,0,0,0"/>
                                                        <TextBlock Text="{Binding MacAddress}" FontSize="10"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="Vendor: " Foreground="#666666" FontSize="10"/>
                                                        <TextBlock Text="{Binding Vendor}" FontSize="10"/>
                                                        <TextBlock Text=" | Type: " Foreground="#666666" FontSize="10" Margin="8,0,0,0"/>
                                                        <TextBlock Text="{Binding Type}" FontSize="10"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <Border Background="#4CAF50" CornerRadius="3" Padding="6,3">
                                                        <TextBlock Text="TRUSTED" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Predictions Tab -->
            <TabItem Header="🔮 Predictions" FontSize="13" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="AI-Powered Network Predictions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock Text="Forecasts based on historical patterns and trend analysis"
                                           Foreground="#666666" FontSize="11" Margin="0,0,0,15"/>

                                <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="PredictionsListBox">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#E3F2FD" CornerRadius="5" Padding="12" Margin="0,0,0,10">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13" Foreground="#1976D2"/>
                                                            <Border Background="#1976D2" CornerRadius="3" Padding="5,2" Margin="10,0,0,0">
                                                                <TextBlock Foreground="White" FontSize="9" FontWeight="Bold">
                                                                    <Run Text="{Binding Confidence}"/><Run Text="% confidence"/>
                                                                </TextBlock>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="#666666" Margin="0,6,0,0" FontSize="11"/>
                                                        <TextBlock Foreground="#999999" FontSize="10" Margin="0,4,0,0">
                                                            <Run Text="Timeframe: "/><Run Text="{Binding EstimatedTimeframe}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <TextBlock x:Name="NoPredictionsText" Text="✓ No issues predicted. Network trends look stable!"
                                           TextWrapping="Wrap" Foreground="#4CAF50" FontStyle="Italic" Margin="0,10,0,0" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Channel Recommendation -->
                        <Border Background="White" CornerRadius="8" Padding="20"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Channel Optimization" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <TextBlock x:Name="ChannelRecommendationText" Text="Analyzing channels..."
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="12" Margin="0,15,0,0"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="#666666" VerticalAlignment="Center" FontSize="11"/>
                <ProgressBar x:Name="ProgressBar" Height="3" VerticalAlignment="Bottom"
                             Visibility="Collapsed" IsIndeterminate="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
