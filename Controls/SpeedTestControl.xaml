<UserControl x:Class="WiFiHealthMonitor.Controls.SpeedTestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Pulse Animation for Active Test -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1.0" To="0.3" Duration="0:0:1.5"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Rotate Animation -->
        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>
    </UserControl.Resources>

    <!-- Full Screen Overlay -->
    <Grid x:Name="SpeedTestOverlay" Background="#DD0F172A" Visibility="Collapsed">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   From="0" To="1" Duration="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <!-- Main Speed Test Container -->
        <Border MaxWidth="900" MaxHeight="600"
                Background="White" CornerRadius="24"
                BorderBrush="#E2E8F0" BorderThickness="1"
                Margin="40">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.3" BlurRadius="60" ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#F8FAFC" Padding="32,24" CornerRadius="24,24,0,0">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="NETWORK SPEED TEST" FontSize="12" FontWeight="SemiBold"
                                     Foreground="#64748B" Margin="0,0,0,8"/>
                            <TextBlock x:Name="TestStatusText" Text="Ready to test your connection"
                                     FontSize="20" FontWeight="SemiBold" Foreground="#0F172A"/>
                        </StackPanel>

                        <!-- Close Button -->
                        <Button x:Name="CloseButton" Content="âœ•"
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Width="40" Height="40" FontSize="20"
                                Background="Transparent" BorderThickness="0"
                                Foreground="#64748B" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}"
                                            CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Speed Test Gauges -->
                <Grid Grid.Row="1" Margin="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Download Speed Gauge -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="DOWNLOAD" FontSize="11" FontWeight="SemiBold"
                                 Foreground="#64748B" HorizontalAlignment="Center" Margin="0,0,0,16"/>

                        <Grid Width="180" Height="180">
                            <!-- Background Circle -->
                            <Ellipse Stroke="#F1F5F9" StrokeThickness="12" Width="180" Height="180"/>

                            <!-- Progress Arc -->
                            <Path x:Name="DownloadProgressArc" Stroke="#10B981" StrokeThickness="12"
                                  StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure x:Name="DownloadArcFigure" StartPoint="90,6">
                                            <ArcSegment x:Name="DownloadArcSegment" Size="84,84"
                                                      IsLargeArc="False" SweepDirection="Clockwise" Point="90,6"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <!-- Glow Effect -->
                            <Ellipse x:Name="DownloadGlow" Width="160" Height="160" Opacity="0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#4410B981" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Speed Value -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock x:Name="DownloadSpeedValue" Text="0"
                                         FontSize="48" FontWeight="Bold" Foreground="#0F172A"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Mbps" FontSize="14" Foreground="#64748B"
                                         HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Upload Speed Gauge -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="UPLOAD" FontSize="11" FontWeight="SemiBold"
                                 Foreground="#64748B" HorizontalAlignment="Center" Margin="0,0,0,16"/>

                        <Grid Width="180" Height="180">
                            <Ellipse Stroke="#F1F5F9" StrokeThickness="12" Width="180" Height="180"/>

                            <Path x:Name="UploadProgressArc" Stroke="#6366F1" StrokeThickness="12"
                                  StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure x:Name="UploadArcFigure" StartPoint="90,6">
                                            <ArcSegment x:Name="UploadArcSegment" Size="84,84"
                                                      IsLargeArc="False" SweepDirection="Clockwise" Point="90,6"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <Ellipse x:Name="UploadGlow" Width="160" Height="160" Opacity="0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#446366F1" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock x:Name="UploadSpeedValue" Text="0"
                                         FontSize="48" FontWeight="Bold" Foreground="#0F172A"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Mbps" FontSize="14" Foreground="#64748B"
                                         HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Ping Gauge -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="PING" FontSize="11" FontWeight="SemiBold"
                                 Foreground="#64748B" HorizontalAlignment="Center" Margin="0,0,0,16"/>

                        <Grid Width="180" Height="180">
                            <Ellipse Stroke="#F1F5F9" StrokeThickness="12" Width="180" Height="180"/>

                            <Path x:Name="PingProgressArc" Stroke="#F59E0B" StrokeThickness="12"
                                  StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure x:Name="PingArcFigure" StartPoint="90,6">
                                            <ArcSegment x:Name="PingArcSegment" Size="84,84"
                                                      IsLargeArc="False" SweepDirection="Clockwise" Point="90,6"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <Ellipse x:Name="PingGlow" Width="160" Height="160" Opacity="0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#44F59E0B" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock x:Name="PingValue" Text="0"
                                         FontSize="48" FontWeight="Bold" Foreground="#0F172A"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="ms" FontSize="14" Foreground="#64748B"
                                         HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Footer / Actions -->
                <Border Grid.Row="2" Background="#F8FAFC" Padding="32,24" CornerRadius="0,0,24,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- ISP Info -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock x:Name="IspNameText" Text="--" FontSize="14"
                                     FontWeight="SemiBold" Foreground="#0F172A"/>
                            <TextBlock x:Name="IpAddressText" Text="Detecting network..."
                                     FontSize="12" Foreground="#64748B" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Action Button -->
                        <Button x:Name="StartTestButton" Grid.Column="1"
                                Content="START TEST" Padding="32,14"
                                Background="#6366F1" Foreground="White"
                                FontSize="14" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="12"
                                            Padding="{TemplateBinding Padding}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#6366F1" Opacity="0.3"
                                                            BlurRadius="20" ShadowDepth="0"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Background" Value="#94A3B8"/>
                                            <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
